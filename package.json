{
  "name": "netflix-chrome-extension",
  "version": "2.0.0",
  "private": true,
  "dependencies": {
    "@craco/craco": "^6.4.3",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.4.0",
    "@types/node": "^16.11.21",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "dotenv": "^16.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "5.0.0",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "deleteignore": "rm -rf build/ignore-this/",
    "clean": "rm -rf build/*",
    "premanifest-dev": "npm run clean",
    "manifest-dev": "NODE_ENV=development ts-node --skip-project src/utils/createManifestJson",
    "manifest-prod": "NODE_ENV=production ts-node --skip-project src/utils/createManifestJson",
    "postmanifest-prod": "npm run deleteignore",
    "prestart": "npm run manifest-dev",
    "start": "craco start",
    "prebuild": "npm run clean",
    "build": "craco build",
    "postbuild": "npm run manifest-prod",
    "test": "craco test",
    "eject": "craco eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/react-hooks": "^7.0.2",
    "@types/chrome": "^0.0.177",
    "copy-webpack-plugin": "^10.2.1",
    "jest-chrome": "^0.7.2",
    "jest-location-mock": "^1.0.9"
  },
  "jest": {
    "moduleNameMapper": {
      "@app(.*)$": "<rootDir>/src/$1",
      "@components(.*)$": "<rootDir>/src/components/$1",
      "@hooks(.*)$": "<rootDir>/src/hooks/$1",
      "@types(.*)$": "<rootDir>/src/types/$1",
      "@utils(.*)$": "<rootDir>/src/utils/$1"
    }
  }
}
